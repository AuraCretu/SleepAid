<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/morningQuestions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.SleepDiary"
    android:layout_marginHorizontal="7.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningTitleSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_diary_morning_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/sleep_diary_morning_instructions"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningDisclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/sleep_diary_morning_disclaimer"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningInstructions"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/morningTitleSection"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion1"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <AutoCompleteTextView
        android:id="@+id/morningAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="time"
        android:hint="e.g. 23:00"
        android:maxLength="5"
        app:layout_constraintTop_toBottomOf="@id/morningSection1"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer1"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion2"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <AutoCompleteTextView
        android:id="@+id/morningAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="time"
        android:hint="e.g. 23:30"
        android:maxLength="5"
        app:layout_constraintTop_toBottomOf="@id/morningSection2"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer2"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion3"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <AutoCompleteTextView
        android:id="@+id/morningAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="time"
        android:hint="e.g. 00:30"
        android:maxLength="5"
        app:layout_constraintTop_toBottomOf="@id/morningSection3"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer3"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion4"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <AutoCompleteTextView
        android:id="@+id/morningAnswer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="time"
        android:hint="e.g. 00:30"
        android:maxLength="5"
        app:layout_constraintTop_toBottomOf="@id/morningSection4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer4"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion5"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/morningAnswer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/morningSection5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion6"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <AutoCompleteTextView
        android:id="@+id/morningAnswer6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="e.g. 1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/morningSection6"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer6"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion7"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/morningAnswer7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/morningSection7"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer7"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion8"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/morningAnswer8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/morningSection8"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/morningSection9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer8"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/morningQuestion9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/morningInformation9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Information"
            app:layout_constraintTop_toBottomOf="@id/morningQuestion9"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/morningAnswer9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/morningSection9"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/saveSleepDiaryAnswersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="12.5dp"
        android:paddingVertical="7.5dp"
        android:text="Save"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/morningAnswer9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>